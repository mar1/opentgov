# Telegram Bot API Key (get from @BotFather)
BOT_TOKEN=your_telegram_bot_token

# Your Polkadot governance proxy private key (in mnemonic format)
# WARNING: Never share or expose this key
POLKADOT_PROXY_MNEMONIC=your_mnemonic_phrase

# Your own Telegram ID to control the bot (get from @UserInfoBot)
AUTHORIZED_USER_ID=123456789

# RPC endpoint for Polkadot (can be changed to other endpoints if needed)
POLKADOT_RPC=wss://rpc.polkadot.io

